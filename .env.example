# Server Configuration
NODE_ENV=development
PORT=3000

# Image Processing Limits
MAX_BYTES=10485760
MAX_PIXELS=8294400
MAX_REGIONS=20

# Output Defaults
DEFAULT_FORMAT=webp
DEFAULT_QUALITY=85

# Rate Limiting
RATE_LIMIT_POINTS=60
RATE_LIMIT_WINDOW_MS=60000

# Security
API_KEY=dev-123

# AWS S3 Configuration (required for S3 endpoints)
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
# S3_ENDPOINT=https://nyc3.digitaloceanspaces.com  # Optional for DigitalOcean Spaces/MinIO

# Webhooks (optional)
# WEBHOOK_URL=https://your-webhook-endpoint.com/callback

# Observability
LOG_LEVEL=info
METRICS_ENABLED=true
TRACING_ENABLED=true
